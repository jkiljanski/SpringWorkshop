<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<bean class="workshop.spring.exercises.misc.ShoutingBean"/>

	<bean class="workshop.spring.exercises.ex1_xml.NameGenerator">
		<property name="numberGiver" ref="numberGiver"/>
	</bean>

	<bean class="workshop.spring.exercises.ex1_xml.NextOddNumberGiver" name="numberGiver" scope="prototype"/>

</beans>
